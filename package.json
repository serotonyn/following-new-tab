{
  "name": "new-tab",
  "version": "0.14.0",
  "private": true,
  "description": "âš¡ A high performance new tab page that gets you where you need to go faster.",
  "license": "MIT",
  "author": "Max Milton <max@wearegenki.com>",
  "homepage": "https://github.com/MaxMilton/new-tab",
  "scripts": {
    "FIXME__lint:css": "stylelint **/*.{css,html,js,md,svelte,svg,ts} --report-needless-disables",
    "build": "SET NODE_ENV=production && rollup --config",
    "build:linux": "NODE_ENV=production rollup --config",
    "prebuild": "node prebuild.js",
    "dev": "NODE_ENV=development rollup --config --watch",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:css": "stylelint **/*.{css,html,js,md,svelte,svg,ts}",
    "lint:js": "eslint --ext html,js,md,mjs,svelte,svg,ts .",
    "lint:md": "remark --frail --quiet .",
    "lint:types": "tsc --noEmit --allowJs --checkJs",
    "test": "jest --notify --watch",
    "test-ci": "jest --ci --coverage",
    "test-e2e": "jest --ci --config test/e2e/jest.config.js"
  },
  "keywords": [
    "chrome-extension",
    "chrome",
    "google-chrome",
    "maxmilton",
    "new-tab-page",
    "ntp",
    "svelte"
  ],
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.23.0",
    "@rollup/plugin-node-resolve": "7.1.1",
    "@rollup/plugin-sucrase": "3.0.0",
    "@types/chrome": "0.0.98",
    "@types/expect-puppeteer": "4.4.0",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/puppeteer": "2.0.1",
    "@wearegenki/renovate-config": "1.0.0",
    "eslint": "6.8.0",
    "jest": "25.1.0",
    "jest-puppeteer": "4.4.0",
    "minna-tools": "0.35.1",
    "minna-ui": "0.35.0",
    "postcss": "7.0.27",
    "postcss-scss": "2.0.0",
    "prettier": "1.19.1",
    "puppeteer": "2.1.1",
    "remark-cli": "7.0.1",
    "rollup": "1.32.0",
    "rollup-plugin-svelte": "5.1.1",
    "stylelint": "13.2.0",
    "svelte": "3.19.1",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  },
  "resolutions": {
    "vfile": "^4.0.2"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools/eslint.js"
    ],
    "env": {
      "webextensions": true
    },
    "globals": {
      "page": true,
      "browser": true,
      "context": true,
      "jestPuppeteer": true
    },
    "rules": {
      "dot-notation": "off"
    }
  },
  "eslintIgnore": [
    "**/dist/**",
    "**/node_modules/**",
    "/test/coverage/**"
  ],
  "jest": {
    "preset": "minna-tools",
    "setupFiles": [
      "./test/__setup__.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{svelte,ts}",
      "!src/app.ts",
      "!src/settings.ts"
    ]
  },
  "postcss": {
    "map": false,
    "plugins": {
      "minna-ui/postcss": {
        "unsafe": true
      }
    },
    "syntax": "postcss-scss"
  },
  "prettier": "minna-tools/prettier",
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "stylelint": {
    "extends": "minna-tools/stylelint",
    "ignoreFiles": [
      "**/*.d.ts",
      "**/dist/**",
      "**/node_modules/**",
      "test/coverage/**"
    ],
    "rules": {
      "color-no-hex": null,
      "scale-unlimited/declaration-strict-value": null,
      "selector-max-id": null
    }
  }
}